<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="181dp"
        android:layout_height="29dp"
        android:entries="@array/list"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner2" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/戻る"
        app:layout_constraintRight_toLeftOf="@+id/button_kakunin"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="82dp" />

    <Button
        android:id="@+id/button_kakunin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/確認"
        android:layout_marginRight="86dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="82dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="185dp"
        android:layout_height="29dp"
        android:entries="@array/list2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="174dp" />

    <TextView
        android:id="@+id/k2_2textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k2_2_text1"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="126dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k2_2_text2"
        android:textSize="24sp"
        android:layout_marginBottom="111dp"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.17" />
</android.support.constraint.ConstraintLayout>